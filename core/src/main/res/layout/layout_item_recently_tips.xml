<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/permission_usage_item_height">

    <View
        android:id="@+id/item_divider_start"
        android:layout_width="20dp"
        android:layout_height="0.33dp"
        android:background="@color/black_alpha_40"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/common_margin_start_end"
        app:layout_constraintEnd_toStartOf="@id/recently_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/recently_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permission_usage_tips_recently"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/item_divider_end"
        android:layout_width="20dp"
        android:layout_height="0.33dp"
        android:background="@color/black_alpha_40"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/common_margin_start_end"
        app:layout_constraintStart_toEndOf="@id/recently_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>