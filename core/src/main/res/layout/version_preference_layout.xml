<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/version_preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_preference_start"
        android:layout_marginEnd="@dimen/common_preference_end"
        android:layout_marginTop="@dimen/common_preference_top"
        android:textSize="16sp"
        android:textColor="@color/black_alpha_90"
        android:gravity="start|center_vertical"
        android:text="@string/version_preference_title"
        android:fontFamily="sans-serif-medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/version_preference_sub_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/version_preference_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_preference_start"
        android:layout_marginEnd="@dimen/common_preference_end"
        android:layout_marginBottom="@dimen/version_preference_bottom"
        android:textSize="14sp"
        android:textColor="@color/black_alpha_50"
        android:gravity="start|center_vertical"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/version_preference_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/permission_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/black_alpha_40"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/common_preference_start"
        android:layout_marginEnd="@dimen/common_preference_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>