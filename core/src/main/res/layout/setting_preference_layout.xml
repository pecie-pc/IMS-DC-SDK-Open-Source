<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/setting_preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_preference_start"
        android:layout_marginEnd="@dimen/common_preference_end"
        android:layout_marginTop="@dimen/common_preference_top"
        android:layout_marginBottom="@dimen/common_preference_bottom"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_alpha_90"
        android:gravity="start|center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/setting_preference_forward_icon"
        />

    <ImageView
        android:id="@+id/setting_preference_forward_icon"
        android:src="@drawable/perference_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_preference_end"/>

    <View
        android:id="@+id/permission_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/black_alpha_40"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/common_preference_start"
        android:layout_marginEnd="@dimen/common_preference_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>